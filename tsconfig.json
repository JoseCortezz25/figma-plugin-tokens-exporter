{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@figma"
    ],
    "paths": {
      "@libs/*": [
        "./src/libs/*"
      ],
      "@common/*": [
        "./src/common/*"
      ],
      "@ui/*": [
        "./src/ui/*"
      ],
      "@plugin/*": [
        "./src/plugin/*"
      ]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "postcss.config.js",
    "tailwind.config.js"
  ]
}